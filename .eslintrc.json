{
    "extends": [
        "eslint:recommended",
        "plugin:node/recommended",
        "plugin:import/errors",
        "plugin:import/warnings",
        "plugin:promise/recommended"
    ],
    "plugins": [
        "node",
        "import",
        "promise",
        "standard"
    ],
    "globals": {
        "$": true,
        "BulmaFormHandler": true,
        "grecaptcha": true
    },
    "rules": {
        "no-unused-vars": "off",
        "semi": "error",
        "no-extra-semi": "error",
        "no-mixed-spaces-and-tabs": "error",
        "indent": ["error", 2],
        "quotes": ["error", "single"],
        "no-console": "off",
        "no-process-exit": "off",
        "no-constant-condition": "off"
    },
    "env": {
        "es6": true,
        "browser": true,
        "node": true,
        "jquery": true
    },
    "parserOptions": {
        "ecmaVersion": 2018
    }
}
