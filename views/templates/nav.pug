header
  nav.navbar.is-fixed-top.has-shadow(role='navigation', aria-label='main navigation')
    .container
      .navbar-brand
        a.navbar-item(href='/')
          img(src='/img/logo.png', alt='Unique - Be smart, be Unique!')
        button.button.navbar-burger(data-target='navMenu')
          span
          span
          span
      #navMenu.navbar-menu
        .navbar-start
          a.navbar-item(href='/member')
            p Member
          a.navbar-item(href='/serverstatus')
            p Serverstatus
          a.navbar-item(href='/apply')
            p Apply
          a.navbar-item(href='/mapupload')
            p Map Upload
          a.navbar-item(href='/ranks')
            p Ranks
        .navbar-end
          if !user
            a.navbar-item(href='/auth/register')
              p Register
            a.navbar-item#login-enable(href='javascript:void(0)')
              p Login
  .modal#login-modal
    .modal-background
    .modal-card#login-card
      header.modal-card-head
        p.modal-card-title Login
        button.delete#login-close(aria-label='close')
      form#form-login
        section.modal-card-body
          .field.is-horizontal
              .field-label.is-normal
                label.label Username
              .field-body
                .field
                  p.control.is-expanded.has-icons-left
                    input.input(type='text', placeholder='Username' name='username')
                    span.icon.is-small.is-left
                      i.fa.fa-user
                  p.help#help-username
          .field.is-horizontal
            .field-label.is-normal
              label.label Password
            .field-body
              .field
                p.control.is-expanded.has-icons-left
                  input.input(type='password', placeholder='Password' name='password')
                  span.icon.is-small.is-left
                    i.fa.fa-key
                p.help#help-password
        footer.modal-card-foot
          button.button.is-success Login
          button.button#login-modal-close Close
