extends layout

mixin member(name, types, flag='Germany', leader=false)
  .column
    - size_class = leader == true ? 'is-one-third' : 'is-one-quarter'
    .box(class=size_class)
      article.media
        .media-left
          figure.image.is-64x64
            img(src=`/img/flags/${flag}.png`, alt=flag)
        .media-content
          .content
            h1= name
            if leader
              h3= types
            else
              h4= types

block content
